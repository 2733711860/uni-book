{
	"easycom": {
		"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "",
				"app-plus": {
					"titleNView": {
						"type": "default", // 开启渐变式导航条
						"backgroundColor": "#62c075",
						"searchInput": { //搜索框
							"backgroundColor": "rgba(230, 230, 230, .5)",
							"borderRadius": "15px",
							"placeholder": "搜索",
							"disabled": true,
							"placeholderColor": "#606266",
							"align": "center"
						},
						"buttons": [{ //左边按钮
								"color": "#606266",
								"float": "left",
								"fontSize": "26",
								"fontSrc": "/static/iconfont/iconfont.ttf",
								"text": "\ue61d",
								"background": "rgba(0,0,0,0)" //将按钮背景改为透明
							},
							{ //右边按钮
								"fontSrc": "/static/iconfont/iconfont.ttf",
								"text": "\ue749",
								"fontSize": "20",
								"color": "#606266",
								"background": "rgba(0,0,0,0)" //将按钮背景改为透明
							},
							{ //右边按钮
								"fontSrc": "/static/iconfont/iconfont.ttf",
								"text": "\ue620",
								"fontSize": "26",
								"color": "#606266",
								"width": "40px",
								"background": "rgba(0,0,0,0)" //将按钮背景改为透明
							}
						]
					}
				}
			}
		}, {
			"path": "pages/search/search",
			"style": {
				"app-plus": {
					"titleNView": {
						"type": "default", // 开启渐变式导航条
						"searchInput": { //搜索框
							"autoFocus": true,
							"backgroundColor": "rgba(230, 230, 230, .5)",
							"borderRadius": "15px",
							"placeholder": "请输入关键字 如：电视机",
							"disabled": false,
							"placeholderColor": "#606266",
							"align": "left"
						},
						"buttons": [{ //右边按钮
							"text": "取消",
							"fontSize": "16",
							"color": "#606266",
							"background": "rgba(0,0,0,0)" //将按钮背景改为透明
						}]
					}
				}
			}
		}, {
			"path": "pages/rank/rank",
			"style": {
				"app-plus": {
					"titleNView": {
						"type": "default", // 开启渐变式导航条
						"searchInput": { //搜索框
							"backgroundColor": "rgba(230, 230, 230, .5)",
							"borderRadius": "15px",
							"placeholder": "搜索",
							"disabled": true,
							"placeholderColor": "#606266",
							"align": "center"
						}
					}
				}
			}
		}, {
			"path": "pages/category/category",
			"style": {
				"navigationBarTitleText": "",
				"enablePullDownRefresh": false
			}
		}, {
			"path": "pages/my/my",
			"style": {
				"navigationBarTitleText": "个人中心",
				"app-plus": {
					"titleNView": {
						"buttons": [{ //左边按钮
								"color": "#878787",
								"float": "left",
								"fontSize": "26",
								"fontSrc": "/static/iconfont/iconfont.ttf",
								"text": "\ue603",
								"background": "rgba(0,0,0,0)" //将按钮背景改为透明
							},
							{ //右边按钮
								"fontSrc": "/static/iconfont/iconfont.ttf",
								"text": "\ue622",
								"fontSize": "26",
								"color": "#878787",
								"background": "rgba(0,0,0,0)" //将按钮背景改为透明
							},
							{ //右边按钮
								"fontSrc": "/static/iconfont/iconfont.ttf",
								"text": "\ue622",
								"fontSize": "26",
								"color": "#878787",
								"background": "rgba(0,0,0,0)" //将按钮背景改为透明
							}
						]
					}
				}
			}
		}, {
			"path": "pages/detail/detail",
			"style": {
				"navigationBarTitleText": "",
				"app-plus": {
					"titleNView": {
						"type": "transparent", // 开启渐变式导航条
						"backgroundColor": "#FFFFFF",
						"buttons": [{ //左边按钮
								"color": "#878787",
								"float": "right",
								"fontSize": "26",
								"fontSrc": "/static/iconfont/iconfont.ttf",
								"text": "\ue65d",
								"background": "rgba(0,0,0,0)" //将按钮背景改为透明
							},
							{ //右边按钮
								"fontSrc": "/static/iconfont/iconfont.ttf",
								"float": "right",
								"text": "\ue620",
								"fontSize": "26",
								"color": "#878787",
								"width": "60px",
								"background": "rgba(0,0,0,0)" //将按钮背景改为透明
							}
						]
					}
				}
			}
		}, {
			"path": "pages/read/read",
			"style": {
				"app-plus": {
					"titleNView": false
				}
			}

		}, {
			"path": "pages/shelf/shelf",
			"style": {
				"navigationBarTitleText": "书架",
				"enablePullDownRefresh": true,
				"app-plus": {
					"pullToRefresh": {
						"style": "circle"
					},
					"titleNView": {
						"type": "default",
						"buttons": [{ // 右边按钮
								"color": "#878787",
								"fontSize": "24",
								"fontSrc": "/static/iconfont/iconfont.ttf",
								"text": "\ue61f",
								"background": "rgba(0,0,0,0)" //将按钮背景改为透明
							},
							{ //右边按钮
								"color": "#878787",
								"fontSize": "24",
								"fontSrc": "/static/iconfont/iconfont.ttf",
								"text": "\ue80f",
								"width": "50px",
								"background": "rgba(0,0,0,0)" //将按钮背景改为透明
							},
							{ //左边按钮
								"fontSrc": "/static/iconfont/iconfont.ttf",
								"float": "left",
								"text": "\ue609",
								"fontSize": "18",
								"color": "#878787",
								"background": "rgba(0,0,0,0)" //将按钮背景改为透明
							}
						]
					}
				}
			}

		}, {
			"path": "pages/searchResult/searchResult",
			"style": {
				"navigationBarTitleText": "搜索",
				"enablePullDownRefresh": false
			}

		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"color": "#878787",
		"selectedColor": "#62c075",
		"backgroundColor": "#f8f8f8",
		"borderStyle": "white",
		"list": [{
			"pagePath": "pages/index/index",
			"text": "书城",
			"iconPath": "static/img/index.png",
			"selectedIconPath": "static/img/index_selected.png"
		}, {
			"pagePath": "pages/shelf/shelf",
			"text": "书架",
			"iconPath": "static/img/shelf.png",
			"selectedIconPath": "static/img/shelf_selected.png"
		}, {
			"pagePath": "pages/rank/rank",
			"text": "榜单",
			"iconPath": "static/img/rank.png",
			"selectedIconPath": "static/img/rank_selected.png"
		}, {
			"pagePath": "pages/my/my",
			"text": "我的",
			"iconPath": "static/img/person.png",
			"selectedIconPath": "static/img/person_selected.png"
		}]
	}
}
